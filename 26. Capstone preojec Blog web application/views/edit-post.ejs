<%- include("./partials/header.ejs") %>

<div class="root">
    <div class="side-bar">
        <%- include("./partials/sidebar.ejs") %>
    </div>
    <div class="content">
        <form class="post-details" action="/patch/<%= post.id %>?_method=PATCH" method="POST">
            <input type="text" name="author" placeholder="Author" value="<%= post.author %>">
            <input type="text" name="title" placeholder="Title" value="<%= post.title %>">
            <input type="text" name="post" placeholder="Text" value="<%= post.post %>">
            <input type="text" name="refferences" placeholder="Refferences" value="<%= post.refferences %>">
            <input type="submit" value="Edit">
        </form>
    </div>
</div>


<%- include("./partials/footer.ejs") %>